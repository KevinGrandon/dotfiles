# Git Aliases
alias g='         git '
alias ga='        git add '
alias gb='        git branch '
alias gba='       git branch -a'
alias gbd='       git branch -d '
alias gbD='       git branch -D '
alias gc='        git commit -a -m '
alias gca='       git commit -a'
alias gcad='      git commit -a --amend'
alias gcp='       git cherry-pick'
alias gct='       git commit'
alias gd='        git diff'
alias gdc='       git diff --cached'
alias gg='        git log -n 5'
alias go='        git checkout '
alias gob='       git checkout -b '
alias gom='       git checkout master'
alias gum='       git pull upstream master && git push origin master'
alias gl='        git pull '
alias glo='       git pull origin '
alias glom='      git pull origin master'
alias glu='       git pull upstream '
alias glum='      git pull upstream master'
alias gh='        git push '
alias ghf='       git push -f '
alias gho='       git push origin '
alias ghu='       git push upstream '
alias ghof='      git push origin -f '
alias ghom='      git push origin master'
alias gr='        git rebase '
alias grc='       git rebase --continue '
alias gri='       git rebase -i '
alias grm='       git rebase -i master'
alias gre='       git remote'
alias grea='      git remote add'
alias greu='      git remote update'
alias grerm='     git remote remove'
alias grhh='      git reset HEAD --hard'
alias gsh='       git stash'
alias gsha='      git stash apply'
alias gshp='      git stash pop'
alias gshd='      git stash drop'
alias gshs='      git stash save'
alias gshw='      git stash show --text'
alias gs='        git status '
alias gw='        git show '

# Programs
alias am='        ~/workspace/dotfiles/atom'
alias sub='       /Applications/Sublime\ Text\ 2.app/Contents/SharedSupport/bin/subl'
alias subaliases='sub ~/workspace/dotfiles/aliases'

# Linux Helpers
alias .bp='       . ~/.bash_profile && echo "Aliases updated."'
alias ..='        cd ../'
alias ...='       cd ../../'
alias ....='      cd ../../../'
alias a='         ag '
alias f='         find '
alias f.='        find . '
alias l='         ls -la'
alias o='         open '
alias o.='        open .'
alias p='         pwd'
alias spoofmac="sudo ifconfig en0 ether $(openssl rand -hex 6 | sed 's/\(..\)/\1:/g; s/.$//') && ifconfig en0 | grep ether"


# Mozilla Aliases
alias gaia="      cd ~/workspace/gaia"
alias gaiaff="    /Applications/FirefoxNightly.app/Contents/MacOS/firefox -profile ~/workspace/gaia/profile-debug"
alias gutest='    ./bin/gaia-test'
gitest() {
	TEST_FILES="$1" ./bin/gaia-marionette
}
gitestv() {
	TEST_FILES="$1" ./bin/gaia-marionette --verbose
}
